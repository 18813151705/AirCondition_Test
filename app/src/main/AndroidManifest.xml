<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aircondition_test">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:exported="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".client.ClientActivity"
            android:exported="true"/>
        <activity android:name=".client.ClientLoginActivity"
            android:exported="true"/>
        <activity android:name=".boss.BossActivity"
            android:exported="true"/>
        <activity android:name=".boss.BossLoginActivity"
            android:exported="true"/>
        <activity android:name=".admin.AdminActivity"
            android:exported="true"/>
        <activity android:name=".admin.AdminLoginActivity"
            android:exported="true"/>
        <activity android:name=".reception.ReceptionActivity"
            android:exported="true"/>
        <activity android:name=".reception.ReceptionLoginActivity"
            android:exported="true"/>


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>